<body>
  <div class = "centering">
    <h1> </h1>
    <img src="assets/img/burger.jpeg" alt="Pretty Burger">

    <h1>Burger Munch</h1>
    <hr>
  </div>
  <container>
    <div class = "centering">
      <table>
        <tr>
          <th>Ready to Devour</th>
          <th>Devoured</th>
        </tr>
        
        <td>
          <ol>
            {{#each burgers}}
             {{#unless this.devoured}}
              <li>
                {{this.name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                 <input type="hidden" name="devoured" value="true">
                 <button type="submit">Devour!</button>
                </form>
              </li>
             {{/unless}}
            {{/each}}
          </ol>
        </td>

        <td>

          <ol>
            {{#each burgers}}
              {{#if this.devoured}}
                <li>
                  {{this.name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                      <input type="hidden" name="devoured" value="false">
                      <button type="submit">Purge!</button>
                    </form>
                </li>
              {{/if}}
            {{/each}}
          </ol>
        </td>
      </table>
    </div>
  </container>

<div class = "centering">
<hr>
<h2>Add a burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  

  <button type="submit">Add Burger</button>
</form>
</div>
</body>
